                                                <input asp-for="productseasonName" class="form-control" style="height: 60px;" style="font-size: 16px;" />
                                                <span asp-validation-for="productseasonName" class="text-danger"></span>
                                    </div>
                                    </div>
                                        <div class="col-6 col-sm-12 col-lg-6">

                                    <div class="form-group">
                                                <label style="font-size: 16px;">Title</label>
                                                <input asp-for="title" class="form-control" style="height: 60px;" style="font-size: 16px;" />
                                        <span asp-validation-for="title" class="text-danger"></span>
                                    </div>
                                    </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6 col-sm-12 col-lg-6">
                                    <div class="form-group">
                                                <label style="font-size: 16px;">Description</label>
                                                <input asp-for="description" class="form-control" style="height: 60px;" style="font-size: 16px;" />
                                        <span asp-validation-for="description" class="text-danger"></span>
                                    </div>
                                    </div>
                                        <div class="col-6 col-sm-12 col-lg-6">

                                    <div class="form-group">
                                                <label style="font-size: 16px;">Tag</label>
                                                <input asp-for="tag" class="form-control" style="height: 60px;" style="font-size: 16px;" />
                                        <span asp-validation-for="tag" class="text-danger"></span>
                                    </div>
                                    </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6 col-sm-12 col-lg-6">
                                    <div class="form-group">
                                                <label style="font-size: 16px;">Keyword</label>
                                                <input asp-for="Keyword" class="form-control" style="height: 60px;" style="font-size: 16px;" />
                                        <span asp-validation-for="Keyword" class="text-danger"></span>
                                    </div>
                                    </div>
                                        <div class="col-6 col-sm-12 col-lg-6">

                                    <div class="form-group">
                                                <label style="font-size: 16px;">Status</label>
                                                <select asp-for="StatusId" class="form-control" style="height: 60px;" style="font-size: 16px;">
                                            @if (ViewBag.status != null)
                                            {
                                                foreach (var item in ViewBag.status)
                                                {
                                                    <option value="@item.StatusId">@item.StatusName</option>

                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="StatusId" class="text-danger"></span>
                                    </div>
                                    </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6 col-sm-12 col-lg-6">
                                            <div class="card mt-2 w-100" style="margin-left: auto; margin-right: 0;">
                                                <div class="card-body">
                                                    <div class="form-group">
                                                        <label style="font-size: 16px;">Image</label>
                                                        <hr />
                                                        <br />
                                                        <input type="file" name="file" class="form-control mt-1" style="height: 60px;" style="font-size: 16px;" onchange="displaySelectedImage(this)">
                                                        <img id="selectedImage" src="~/@Model.imagepath" width="200px" height="200px" class="ml-5 mt-4" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                    <button type="submit" class="btn btn-primary p-3 mt-5">Submit</button>

                                </div>
                        </div>
                    </div>
                    </form>

                </div>
            </div>
        </div>
