@model Theme_Implemenet.Models.Company


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Melody Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Adminsite/vendors/iconfonts/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="~/Adminsite/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Adminsite/vendors/css/vendor.bundle.addons.css">
    <!-- endinject -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Adminsite/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Adminsite/images/favicon.png" />
</head>
<style>
    .btn-primary:hover {
        background-color: blueviolet;
    }
</style>
<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_settings-panel.html -->
            <!-- partial -->
            <div class="main-panel" style="width:400%">
                <div class="content-wrapper container-fluid">
                    <div class="page-header">
                        <h3 class="page-title">
                           Update Company 
                        </h3>
                        <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                                <li class="breadcrumb-item active" aria-current="page" style="font-size: 15px;"><a href="@Url.Action("Index","Company")" style="color:black;">Company List</a></li>
                            </ol>
                        </nav>
                    </div>
                    <form class="forms-sample" method="post">

                                    <div class="row">
                                        <div class="card" style="width:400%">
                                            <input type="hidden" value="@Model.CompanyId" name="CompanyId" />
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-4 col-sm-12 col-lg-4">
                                                        <div class="form-group" style="margin-top:30px;">
                                                            <label style="font-size: 16px;">CompanyName</label>
                                                            <input asp-for="CompanyName" class="form-control" style="height: 60px;font-size: 16px;" />
                                                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-4 col-sm-12 col-lg-4">

                                                        <div class="form-group" style="margin-top:30px;">
                                                            <label style="font-size: 16px;">ContactNo</label>
                                                            <input asp-for="ComapnyContactNo" class="form-control form-control-lg border-left-0" class="form-control" style="height: 60px;font-size: 16px;" />
                                                            <span asp-validation-for="ComapnyContactNo" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-4 col-sm-12 col-lg-4">
                                                        <div class="form-group" style="margin-top:30px;">
                                                            <label style="font-size: 16px;">ComapnyEmail</label>
                                                            <input asp-for="CompanyEmail" class="form-control form-control-lg border-left-0" class="form-control" style="height: 60px;font-size: 16px;" />
                                                            <span asp-validation-for="CompanyEmail" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-4 col-sm-12 col-lg-4">
                                                        <div class="form-group" style="margin-top:10px;">
                                                            <label style="font-size: 16px;">Address</label>
                                                            <input asp-for="Address" class="form-control form-control-lg border-left-0" class="form-control" style="height: 60px;font-size: 16px;" />
                                                            <span asp-validation-for="Address" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-4 col-sm-12 col-lg-4">

                                                        <div class="form-group" style="margin-top:10px;">
                                                            <label style="font-size: 16px;">Status</label>
                                                            <select asp-for="StatusId" class="form-control" style="height: 60px;font-size: 16px;">
                                                                @if (ViewBag.status != null)
                                                                {
                                                                    foreach (var item in ViewBag.status)
                                                                    {
                                                                        <option value="@item.StatusId">@item.StatusName</option>

                                                                    }
                                                                }
                                                            </select>
                                                            <span asp-validation-for="StatusId" class="text-danger"></span>

                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="d-flex justify-content-lg-end justify-content-sm-start">
                                                    <button type="submit" class="btn btn-primary mr-2  m-b-0">Save</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </form>
                          
                </div>
            </div>
        </div>
      
    </div>

</body>
